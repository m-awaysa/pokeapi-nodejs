<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark text-light navbar-dark  border-bottom">
        <div class="ms-5">
            POKE<span class="text-warning">MON</span>
        </div>
    </nav>

    <div class="row ms-5 ">
        <% for (var i=0; i <=18; i++ ) { %>

            <div class="card m-4" style="width: 18rem;">
                <img src="<%=pokemons[i].sprites.other.home.front_default %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= pokemons[i].name %>
                    </h5>
                    <div class="dropdown mb-1 ">
                        <a class="btn btn-light dropdown-toggle col-12 Container text-warning" href="#" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Abilities
                        </a>
                        <ul class="dropdown-menu">
                            <% pokemons[i].abilities.forEach( (abilities)=> { %>

                                <li><a class="dropdown-item" href="#">
                                        <%= abilities.ability.name %>
                                    </a></li>

                                <% }); %>
                        </ul>
                    </div>
                    <a href="https://www.pokemon.com/us/pokedex/<%= pokemons[i].name %>" class="btn btn-primary">More
                        Info</a>
                </div>
            </div>

            <% } %>

    </div>
</body>



</html>